# Orchestrator .env
NEXTJS_DIR=/ABSOLUTE/PATH/TO/YOUR/SITE   # <- use the pwd from above

# (Optional) API bases used by 'verify' step; helpful but not required for build
FORECAST_API_BASE=https://forecast-fastapi.onrender.com/forecast
MONTE_API_BASE=https://montecarlo-fastapi.onrender.com/montecarlo
PORTFOLIO_API_BASE=

# S3/CF (needed for deploy)
AWS_REGION=us-east-1
S3_BUCKET=your-portfolio-static-bucket
S3_PREFIX=
CLOUDFRONT_DISTRIBUTION_ID=E2ABC123XYZ   # or leave blank to skip invalidation

# Orchestrator flags
DRY_RUN=false
SKIP_NPM_CI=false
