# === Orchestrator .env ===

# Path to the Next.js app ROOT (must contain package.json and /pages)
NEXTJS_DIR=/site

# Live API bases (used only by the orchestrator's "verify" step)
# Health is at /health on each service root.
FORECAST_API_BASE=https://forecast-fastapi.onrender.com
MONTE_API_BASE=https://montecarlo-fastapi.onrender.com
PORTFOLIO_API_BASE=

# (Optional) Baked into the static build if your UI reads it
NEXT_PUBLIC_PORTFOLIO_API=

# AWS (S3 + CloudFront)
AWS_REGION=us-east-1
S3_BUCKET=jamesboggsoct25portfolio
S3_PREFIX=
CLOUDFRONT_DISTRIBUTION_ID=E3HVA5QXVS6KLS

# Credentials (required if running outside of GitHub OIDC/role)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Orchestrator flags
DRY_RUN=false
SKIP_NPM_CI=false

# ----- UI brand tokens (optional) -----
UI_BG_HEX=#0B0F14
UI_FROST_ALPHA=0.10
UI_FROST_BLUR_PX=28
UI_STROKE_ALPHA=0.18
UI_GLOW_ALPHA=0.20
UI_TIFFANY_HEX=#81D8D0
UI_TEXT_PRIMARY_ALPHA=0.90
UI_TEXT_SECONDARY_ALPHA=0.70
UI_CIRCUIT_HEX=#00E5FF
UI_CIRCUIT_OPACITY=0.30
UI_STATUS_GREEN=#0CE28A
